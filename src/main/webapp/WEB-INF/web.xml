<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Recipe Recommender Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Recipe List Servlet -->
    <servlet>
        <servlet-name>RecipeListServlet</servlet-name>
        <servlet-class>com.recipe.servlet.RecipeListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeListServlet</servlet-name>
        <url-pattern>/recipes</url-pattern>
    </servlet-mapping>

    <!-- Add Recipe Servlet -->
    <servlet>
        <servlet-name>AddRecipeServlet</servlet-name>
        <servlet-class>com.recipe.servlet.AddRecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRecipeServlet</servlet-name>
        <url-pattern>/add-recipe</url-pattern>
    </servlet-mapping>

    <!-- View Recipe Details Servlet -->
    <servlet>
        <servlet-name>RecipeDetailsServlet</servlet-name>
        <servlet-class>com.recipe.servlet.RecipeDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeDetailsServlet</servlet-name>
        <url-pattern>/recipe-details</url-pattern>
    </servlet-mapping>

    <!-- Filter Recipes by Cuisine Servlet -->
    <servlet>
        <servlet-name>FilterCuisineServlet</servlet-name>
        <servlet-class>com.recipe.servlet.FilterCuisineServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilterCuisineServlet</servlet-name>
        <url-pattern>/filter-cuisine</url-pattern>
    </servlet-mapping>

    <!-- Add User Servlet -->
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.recipe.servlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>

    <!-- User List Servlet -->
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>com.recipe.servlet.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <!-- Recipe Recommendations Servlet -->
    <servlet>
        <servlet-name>RecommendationsServlet</servlet-name>
        <servlet-class>com.recipe.servlet.RecommendationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecommendationsServlet</servlet-name>
        <url-pattern>/recommendations</url-pattern>
    </servlet-mapping>

    <!-- XSL Transform Servlet -->
    <servlet>
        <servlet-name>XSLTransformServlet</servlet-name>
        <servlet-class>com.recipe.servlet.XSLTransformServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>XSLTransformServlet</servlet-name>
        <url-pattern>/recipes-xsl</url-pattern>
    </servlet-mapping>

    <!-- Search Servlet -->
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.recipe.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

</web-app>


